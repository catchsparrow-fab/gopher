@{
    ViewBag.Title = "System administration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-3 col-md-2 sidebar">
        <ul class="nav nav-sidebar">
            <li class="@(ViewBag.ActiveTab == "users" ? "active" : string.Empty)">
                <a href="@Url.Action("Index", "Users")">
                    @Html.Translation("Administration_Tabs_Users")
                </a>
            </li>
            <li class="@(ViewBag.ActiveTab == "codes" ? "active" : string.Empty)">
                <a href="@Url.Action("Index", "Codes")">
                    @Html.Translation("Administration_Tabs_Shops")
                </a>
            </li>
            <li class="@(ViewBag.ActiveTab == "translations" ? "active" : string.Empty)">
                <a href="@Url.Action("Index", "Translations")">
                    @Html.Translation("Administration_Tabs_Translations")
                </a>
            </li>
        </ul>
    </div>
    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
        <div>
            @RenderBody()
        </div>
    </div>
</div>

