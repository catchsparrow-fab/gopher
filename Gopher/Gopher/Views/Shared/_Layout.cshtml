<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - GOPHER</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <link rel="stylesheet" href="//ajax.googleapis.com/ajax/libs/jqueryui/1.11.2/themes/smoothness/jquery-ui.css" />
    <script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.11.2/jquery-ui.min.js"></script>
    <script src="~/scripts/jquery.form.min.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top gopher-navbar">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <a href="/"><img class="pull-left" height="50" src="/content/img/zwilling.jpg" /></a>
                @if (User.Identity.IsAuthenticated)
                {
                    <ul class="nav navbar-nav">
                        <li >
                            <a class="gopher-menu-item" href="@Url.Action("Index", "Home", new { area = string.Empty })">
                                @Html.Translation("Header_CustomerSearch")
                            </a>
                        </li>
                        <li>
                            <a class="gopher-menu-item" href="@Url.Action("Import", "Home", new { area = string.Empty })">
                                @Html.Translation("Header_Import")
                            </a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li>
                                <a class="gopher-menu-item" href="@Url.Action("Index", "Users", new { area = "Admin" })">
                                    @Html.Translation("Header_Administration")
                                </a>
                            </li>
                        }
                    </ul>
                }
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container-fluid body-content">
        @RenderBody()
        <footer class="gopher-footer">
            <hr />
            <p>&copy; @DateTime.Now.Year - Inter-Tel Japan, K.K.</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
